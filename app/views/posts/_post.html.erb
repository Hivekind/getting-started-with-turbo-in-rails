<%= turbo_frame_tag(dom_id(@post)) do %>
  <div>
    <p>
      <strong>Title:</strong>
      <%= post.title %><br />
      <sub id="comment_count"><%= "(#{@post.comments.count}) comments" %></sub>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

    <%= render "comments/comments" %>

  </div>
<% end %>